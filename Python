class Животное:
    def __init__(self, имя, возраст, команды=[]):
        self.имя = имя
        self.возраст = возраст
        self.команды = команды

    def добавить_команду(self, команда):
        self.команды.append(команда)

    def список_команд(self):
        return self.команды

class Собака(Животное):
    def __init__(self, имя, возраст, порода):
        super().__init__(имя, возраст)
        self.порода = порода

class Кошка(Животное):
    def __init__(self, имя, возраст, окрас):
        super().__init__(имя, возраст)
        self.окрас = окрас

class РеестрДомашнихЖивотных:
    def __init__(self):
        self.животные = []

    def добавить_животное(self, животное):
        self.животные.append(животное)

    def определить_класс(self, животное):
        if isinstance(животное, Собака):
            return 'Собака'
        elif isinstance(животное, Кошка):
            return 'Кошка'
        else:
            return 'Неизвестный класс'

    def список_команд(self, животное):
        return животное.список_команд()

    def обучить_животное(self, животное, новая_команда):
        животное.добавить_команду(новая_команда)


реестр = РеестрДомашнихЖивотных()

собака = Собака("Бобик", 3, "Такса")
кошка = Кошка("Мурка", 2, "Серый")

реестр.добавить_животное(собака)
реестр.добавить_животное(кошка)

for животное in реестр.животные:
    print(f"{животное.имя} - {реестр.определить_класс(животное)}")

    print("Команды:")
    for команда in реестр.список_команд(животное):
        print(команда)
